@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}

<!DOCTYPE HTML>
<html>
	<head>
		<title>Welcome - UmbracoTV</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/css/Master.css" />
	</head>
	
	<body>

		<!-- Header -->
		<header>
			<div class="container">
				<div class="upper row">
					<div class="col logo">
						<a href="/"> <span>STMO</span> </a>
					</div>
					<div class="col navbar-search">
						<form class="searchBar">
							<input class="searchText" type="text" placeholder="Search the site" name="search" />
							<button class="search-button fa fa-search" type="submit"></button>
						</form>
					</div>
					<div class="col- navbar-contact-button">
						<a class="contact-button">
							<span>Contact!</span>
						</a>
					</div>
				</div>

			    <div class="lower row">
					<div class="col-7 main-nav">
						<ul class="ul-nav">
							 <li class="first-li"><a href="#">About</a></li>
							 <li><a href="#">Gallery</a></li>
							 <li><a href="#">Shop</a></li>
							 <li><a href="#">Blog</a></li>
						</ul>
					</div>
					<div class="col-5 secondary-nav">
						<ul class="ul-nav secondary-ul-nav">
							 <li><a href="#">Sitemap</a></li>
							 <li><a href="#">Members</a></li>
							 <li><a href="#">English</a></li>
						</ul>
					</div>
			    </div>
			</div>
		</header>
		
    @RenderBody()
	
	<!-- Scripts -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
	
	</body>
</html>